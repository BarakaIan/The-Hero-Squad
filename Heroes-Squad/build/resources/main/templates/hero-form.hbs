{{#partial "styles"}}
    <link rel='stylesheet' type="text/css" href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <br>
    <br>
    <br>
    <h2 class="text-center">Create a New Hero</h2>
    <div id="newHeroForm">
        {{#if updateHero}}
            <form action="/heroes/{{updateHero.heroID}}/update" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" class="form-control" value="{{updateHero.name}}" required>
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" id="age" name="age" class="form-control" min="0" value="{{updateHero.age}}"
                           required>
                </div>
                <div class="form-group">
                    <label for="power">Special Power</label>
                    <input type="text" id="power" name="power" class="form-control" value="{{updateHero.power}}"
                           required>
                </div>
                <div class="form-group">
                    <label for="weakness">Weakness</label>
                    <input type="text" id="weakness" name="weakness" class="form-control"
                           value="{{updateHero.weakness}}"
                           required>
                </div>
                <div class="form-group">
                    <label for="defense">Defense</label>
                    <input type="text" id="defense" name="defense" class="form-control"
                           value="{{updateHero.defense}}"
                           required>
                </div>
                <div class="form-group">
                    <label for="attack">Attack</label>
                    <input type="text" id="attack" name="attack" class="form-control"
                           value="{{updateHero.attack}}"
                           required>
                </div>

                <button class="btn btn-outline-secondary" type="submit">Create</button>
            </form>
        {{else}}
            <form action="/heroes/new" method="post">
                <div class="form-group">
                    <label for="name">Name of hero</label>
                    <input type="text" id="name" name="name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="age">Age of the Hero</label>
                    <input type="number" id="age" name="age" class="form-control" min="0" required>
                </div>
                <div class="form-group">
                    <label for="power">Strength of the Hero</label>
                    <input type="text" id="power" name="power" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="weakness">Weakness of the Hero</label>
                    <input type="text" id="weakness" name="weakness" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="defense">Defense of the Hero</label>
                    <input type="text" id="defense" name="defense" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="attack">Attack of the Hero</label>
                    <input type="text" id="attack" name="attack" class="form-control" required>
                </div>

                <button type="button" class="btn btn-success">Success</button>
            </form>
        {{/if}}
    </div>
{{/partial}}

{{> layout.hbs}}